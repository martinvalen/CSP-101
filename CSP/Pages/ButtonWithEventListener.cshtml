@page
@model ButtonWithEventListenerModel

@{
    Layout = "Shared/_CspLayout";
}

<input type="button" class="btn" id="clickmebutton" value="Click me!" />

@section Explanation
{
<pre>&lt;input type="button" id="clickmebutton" value="Click me!"/&gt;
&lt;script src="/js/click-me-button.js"&gt;&lt;/script&gt;
</pre>
<pre>
document.addEventListener('DOMContentLoaded', function () {
    document.getElementById('clickmebutton')
        .addEventListener('click', doStuffOnClick);
});

function doStuffOnClick() {
    alert('Button clicked!');
}</pre>

}


@section ScriptSection {
